<h2>List of all tasks</h2>

<% @tasks.each do |task| %>

  <li>
    <%= task.completed ? '✅' : '❌' %>
    <%= link_to task.title, task_path(task) %>
    <%= link_to '🗑️', task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %>

  </li>

<% end %>

<br>

<%= link_to '➕ Add a new task', new_task_path, class: 'btn btn-warning' %>
