<h2>List of all tasks</h2>

<% @tasks.each do |task| %>

  <li>
    <input type="checkbox" name=<%= "#{task.title}" %>
      <%= "checked" if task.completed == true %>
    >
    <label for=<%= "#{task.title}" %>><%= link_to task.title, task_path(task) %>
    </label>
  </li>


<% end %>

<br>

<%= link_to '+ Add a new task', tasks_new_path %>
