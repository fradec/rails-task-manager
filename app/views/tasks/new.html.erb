<h2>Add a new task</h2>

<%= form_for(@task) do |f| %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="form-group">
    <%= f.label :details %>
    <%= f.text_field :details %>
  </div>

  <%= f.submit class: 'btn btn-primary' %>

<% end %>

<%= link_to 'Back to list', tasks_path, class: 'btn btn-success' %>
