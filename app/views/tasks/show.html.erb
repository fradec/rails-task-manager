<div class="show-task-title">
  <h2><%= @task.title %></h2>

  <%= link_to 'Edit this task', edit_path(@task), class: 'btn btn-danger' %>

</div>


<div id="details">
  <%= @task.details %>
</div>

<div id="completed">
  <%= @task.completed ? '✅ This task is done' : '❌ This task is not completed yet' %>
</div>

<%= link_to 'Back to list', tasks_path, class: 'btn btn-success text-center' %>
