<%= form_for(task) do |f| %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="form-group">
    <%= f.label :details %>
    <%= f.text_field :details %>
  </div>

  <% if task.new_record? == false %>
    <div class="form-group">
      <%= f.label :completed %>
      <%= f.check_box :completed %>
    </div>
  <% end %>

  <%= f.submit class: 'btn btn-primary' %>

<% end %>

<%= link_to 'Back to list', tasks_path, class: 'btn btn-success' %>
